<Page x:Class="WPF_Guichet_Bancaire.views.CrediterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Guichet_Bancaire.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CrediterPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#130f40"/>
        <TextBlock Text="Ajouter de l'argent à votre compte bancaire." Grid.Row="0" FontSize="24" HorizontalAlignment="Center" Foreground="White"/>
        <StackPanel Grid.Row="1" x:Name="stackComptes" Background="#30336b">
            <TextBlock FontSize="16" Margin="20,10,0,0" Foreground="White">Entrez le montant que vous voulez ajouter sur votre compte bancaire :</TextBlock>
            <TextBox x:Name="txtMontantAjt" Width="300" HorizontalAlignment="Left" Margin="20,10,0,0"/>
            <Button x:Name="btnCrediter" Content="Ajouter" Width="100" HorizontalAlignment="Left" Margin="20,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
