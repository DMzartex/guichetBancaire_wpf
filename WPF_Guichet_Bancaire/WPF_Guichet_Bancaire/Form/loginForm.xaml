<Page x:Class="WPF_Guichet_Bancaire.Form.loginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Guichet_Bancaire.Form"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="300"
      Title="loginForm" Background="Black">

    <Grid x:Name="grdLogin">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="0,0,0,5" FontSize="14" Foreground="White">Adresse email :</TextBlock>
            <TextBox x:Name="emailTxtBox" Text="Entrez votre adresse email"/>
            <TextBlock Margin="0,5,0,5" FontSize="14" Foreground="White">Mot de passe :</TextBlock>
            <PasswordBox x:Name="passwordBox"/>
            <Button x:Name="loginBtn" Content="connexion" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
